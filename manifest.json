{
  "manifest_version": 3,
  "name": "Extension Bookmarks GH",
  "version": "1.0",
  "description": "Кастомные закладки с расширенными возможностями",
  "permissions": ["storage", "bookmarks"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/logo/icon16.png",
      "48": "assets/logo/icon48.png",
      "128": "assets/logo/icon128.png"
    }
  },
  "icons": {
    "16": "assets/logo/icon16.png",
    "48": "assets/logo/icon48.png",
    "128": "assets/logo/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: chrome://favicon/"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/*.svg", "assets/icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
