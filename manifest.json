{
  "manifest_version": 3,
  "name": "Extension Bookmarks GH",
  "short_name": "GH Bookmarks",
  "version": "1.0",
  "description": "Автономный менеджер закладок с собственным хранилищем, независимым от браузера. Удобное управление и организация закладок.",
  "permissions": [
    "storage",
    "bookmarks",
    "unlimitedStorage",
    "downloads",
    "tabs",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/logo/icon16.png",
      "48": "assets/logo/icon48.png",
      "128": "assets/logo/icon128.png"
    }
  },
  "icons": {
    "16": "assets/logo/icon16.png",
    "48": "assets/logo/icon48.png",
    "128": "assets/logo/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https://* http://*"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/*.svg", "assets/icons/*.png", "reset.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
